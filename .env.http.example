# DBHub MCP Server Configuration - HTTP Mode
# Copy this file to .env and customize for your environment

# Transport Configuration
TRANSPORT_TYPE=http
HTTP_ADDR=:8080
HTTP_CORS_ORIGINS=*
HTTP_API_KEY=change-me-to-a-secure-random-key

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mydb
DB_USER=readonly_user
DB_PASSWORD=secure_password

# Connection Pool Settings
DB_MAX_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_TIMEOUT_SEC=10

# Query Limits
QUERY_TIMEOUT_SEC=30
MAX_ROWS=1000

# Logging
LOG_LEVEL=info
